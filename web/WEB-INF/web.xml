<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AddView</servlet-name>
        <servlet-class>views.AddView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListView</servlet-name>
        <servlet-class>views.ListView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddView</servlet-name>
        <url-pattern>/AddView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListController</servlet-name>
        <url-pattern>/ListController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListView</servlet-name>
        <url-pattern>/ListView</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListController</servlet-name>
        <servlet-class>controllers.ListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddController</servlet-name>
        <servlet-class>controllers.AddController</servlet-class>
    </servlet>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
